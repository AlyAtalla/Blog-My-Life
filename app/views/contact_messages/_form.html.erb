<div class="card mt-4">
  <div class="card-body">
    <h4>Contact Me</h4>
    <%= form_with model: @contact_message || ContactMessage.new, url: contact_messages_path, local: true do |f| %>
      <% if ( @contact_message && @contact_message.errors.any? ) %>
        <div class="alert alert-danger">
          <ul>
            <% @contact_message.errors.full_messages.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-4 mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-4 mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-md-4 mb-3 d-flex align-items-end">
          <div class="w-100">
            <%= f.submit 'Send message', class: 'btn btn-primary w-100' %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :message, class: 'form-label' %>
        <%= f.text_area :message, rows: 4, class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>
