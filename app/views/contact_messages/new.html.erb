<div class="row justify-content-center">
  <div class="col-md-8">
    <h2>Contact Me</h2>
    <%= form_with model: @contact_message, url: contact_messages_path, local: true do |f| %>
      <% if @contact_message.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @contact_message.errors.full_messages.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :message, class: 'form-label' %>
        <%= f.text_area :message, rows: 6, class: 'form-control' %>
      </div>
      <div class="d-grid">
        <%= f.submit 'Send message', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
