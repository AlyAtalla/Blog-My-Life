<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>All posts</h2>
  <% if logged_in? %>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
  <% end %>
</div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6 mb-3">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, post, class: 'stretched-link' %></h5>
          <p class="card-subtitle mb-2 text-muted">By <%= link_to post.user.name, post.user %> â€¢ <%= time_ago_in_words(post.created_at) %> ago</p>
          <p class="card-text mt-2"><%= truncate(post.body, length: 220) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>