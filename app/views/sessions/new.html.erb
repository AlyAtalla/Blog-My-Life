<div class="row justify-content-center">
  <div class="col-md-6">
    <h2>Log in</h2>
    <%= form_with url: login_path, local: true do %>
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <div class="mb-3">
        <%= label_tag :email, 'Email', class: 'form-label' %>
        <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'you@example.com' %>
      </div>

      <div class="mb-3">
        <%= label_tag :password, 'Password', class: 'form-label' %>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'password' %>
      </div>

      <div class="d-grid">
        <%= submit_tag 'Log in', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
